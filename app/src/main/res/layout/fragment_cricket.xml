<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat"
    android:background="@drawable/backgroundbawag">
    <!-- TODO: Update blank fragment layout -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilsatu"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/icpropil"/>
    <TextView
        android:id="@+id/textprofilatas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Status saya"
        android:layout_toRightOf="@id/profilsatu"
        android:layout_marginTop="18dp"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginLeft="@dimen/activity_vertical_margin">

    </TextView>

    <TextView
        android:id="@+id/textjam"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textprofilatas"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textSize="15dp"
        android:layout_toRightOf="@id/profilsatu"
        android:fontFamily="@font/poppinsregular"
        android:text="Kemarin 17.52"
        android:textColor="@color/card_4">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pembaruan Terkini"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/card_4"
        android:layout_below="@id/textjam"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin">

    </TextView>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/menustatus"
        android:layout_toRightOf="@id/profilsatu"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="30dp">

    </ImageButton>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:fontFamily="@font/poppinsbold"
        android:background="@color/black"
        android:padding="@dimen/activity_vertical_margin"
        android:textColor="@color/light_white"
        android:textSize="16dp"
        android:text="          Dibuat Saat Gabut Oleh Adrian">

    </TextView>
</RelativeLayout>