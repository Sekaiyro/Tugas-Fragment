<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/warnaatas"/>
    <TextView
        android:id="@+id/namaapk"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Hi, Adrian Praman.."
        android:textColor="@color/card_4"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="16dp"
        android:fontFamily="@font/poppinsbold"/>
    <TextView
        android:id="@+id/opt1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_action_photo"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/namaapk"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:id="@+id/opt2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_action_search"
        android:layout_toRightOf="@id/opt1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:id="@+id/opt3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/menustatus"
        android:layout_toRightOf="@id/opt2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/warnaatas"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="1dp"
        tools:layout_editor_absoluteX="8dp" />
</RelativeLayout>

